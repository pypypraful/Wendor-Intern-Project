<main>
		  <div class="row">

			<div class="white col s8 offset-s1">
				<h1>My Offers</h1>
				<div class="divider"></div>
				<div class="row">
					<div class="col s12 m9 l10">

                        <!--Add-Offer Section Started-->
												{{#if errors}}
													{{#each errors}}
													<body onload = "M.toast({html: '{{msg}}'})"></body>
													{{/each}}
												{{/if}}
												{{#if success_msg}}
													<body onload = "M.toast({html: '{{success_msg}}'})"></body>
												{{/if}}
												{{#if error}}
													<body onload = "M.toast({html: '{{error}}'})"></body>
												{{/if}}
                        <div id="add-offer" class="section scrollspy">
                            <span class="flow-text"><h5>Add Offer</h5></span>
                            <div class="divider col s3"></div>
                            <div class="row">
                                <form method="post" action="/admin_offers/add" class="col s12">
                                  <div class="row">
                                    <div class="input-field col s4">
                                      <input id="offer_name" type="text" class="validate" data-length="15" name="offer_name">
                                      <label for="offer_name">Offer Name</label>
                                    </div>
                                    <div class="input-field col s4">
                                      <input id="price" type="text" class="validate" name="price">
                                      <label for="price">Price</label>
                                    </div>
                                    <div class="input-field col s4">
                                      <input id="offer_category" type="text" class="validate" name="category">
                                      <label for="offer_category">Offer Category</label>
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div class="input-field col s9">
                                      <input id="short_des" type="text" class="validate" data-length="40" name="shortinfo">
                                      <label for="short_des">Short Description</label>
                                    </div>
                                    <div class="input-field col s3">
                                      <input id="offer_validity" type="text" class="validate" name="validity">
                                      <label for="offer_validity">Offer Validity</label>
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div class="input-field col s9">
                                        <textarea id="full_des" type="text" class="validate materialize-textarea" data-length="80"name="fullinfo"></textarea>
                                      <label for="full_des">Full Description</label>
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div class="file-field input-field">
                                      <div class="file-path-wrapper col s6">
                                        <input class="file-path validate" type="text">
                                      </div>
                                      <div class="btn waves-effect waves-light btn-small"><span>Choose File</span>
                                        <input type="file"name="offer_image">
                                      </div>
                                    </div>
                                  </div>
                                  <button class="btn waves-effect waves-light btn-small" type="submit" name="action">Submit</button>
                                </form>
                              </div>
                        </div>
                <!--Add-Offer Section Started-->

											{{#each offers}}
											<div id="{{category}}" class="section scrollspy">
												<div class="row">

													<div class="col s6">
														<div class="card small">
															<div class="card-image">
																<img src="{{offer_img_address}}.jpg">
																<span class="card-title">{{name}}</span>
															</div>
															<div class="card-content">
																<p>{{shortinfo}}</p>
																<p>Validity Duration: {{validity}}</p>
																<p> Price: {{price}} </p>
															</div>
															<div class="card-action">
																<a href="#">Buy Now</a>
																<a href="#">Read More..</a>
																<a href="#">Edit</a>
															</div>
														</div>
													</div>
												</div>
											</div>
											{{/each}}
                    </div>

                </div>
			</div>


      <!--scrollspy started-->
			  <div class="rightsidebar teal lighten-5 col s2">
				  <div class="row">
                        <div class="col hide-on-small-only white-text text-white">
                          <ul class="section table-of-contents ">
                            <li><a href="#add-offer">Add-Offer</a></li>
														{{#each category as |item|}}
                            <li><a href="#{{item}}">{{item}}</a></li>
														{{/each}}
                          </ul>
                        </div>
                  </div>
              </div>
      <!--scrollspy started-->
      </main>
